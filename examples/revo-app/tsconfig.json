{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"jsxFactory": "Revo", // custom jsx factory
		"jsxFragmentFactory": "Revo.Fragment", // custom jsx fragment factory
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"../../dist": ["../../dist"]
		}
	},
	"include": ["./**/*.tsx", "./**/*.ts"],
	"exclude": ["node_modules"]
}
