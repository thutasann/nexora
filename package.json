{
  "name": "nexora",
  "version": "0.0.4",
  "description": "A lightweight, production-ready JavaScript library for building user interfaces, supporting JSX.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc && vite build",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "format": "npx prettier . --write -c .prettierrc",
    "example:production": "cd examples/nexora-production-app && npm run dev",
    "example:dev": "npm run dev"
  },
  "keywords": [
    "javascript",
    "typescript",
    "jsx",
    "ui-library",
    "frontend",
    "nexora"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0",
    "vite": "^6.0.5"
  },
